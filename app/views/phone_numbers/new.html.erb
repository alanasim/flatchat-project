<div class="col-md-4 side-nav">
  <h1 class="logo">LISTNR</h1>
</div>


<div class="col-md-8 main">
<h1>Add your phone number to your account (Optional)</h1>
<p>By adding your phone number, your friends will be able to find you on Flatchat using your number</p>
<%= form_for @phone_number, remote: true do |f| %>
  <div class="form-group">
    <%= f.text_field :phone_number %>
  </div>
  <%= f.submit "Send PIN", class: "btn btn-primary", id: 'send-pin-link' %>
<% end %>
<br>
<div>
  <%= link_to "No Thanks", chats_path, class: 'btn btn-primary' %>
</div>

<div id="verify-pin">
<h3>Enter your PIN</h3>
<%= form_tag phone_numbers_verify_path, remote: true do |f| %>
  <%= hidden_field_tag 'hidden_phone_number', '' %>
  <div class="form-group">
    <%= text_field_tag :pin %>
  </div>
  <%= submit_tag "Verify PIN", class: "btn btn-primary" %>
  <% end %>
</div>

<div id="status-box" class="alert alert-success">
  <p id="status-message">Status: Havenâ€™t done anything yet</p>
</div>

</div>