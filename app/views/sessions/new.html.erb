<div class="col-md-4 side-nav">
  <h1 class="logo">LISTNR</h1>
</div>


<div class="col-md-8 main">
<h1>Login</h1>

<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<%= form_for :user, url: '/login', method: 'post' do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.submit "Login" %>
<% end %>
</div>